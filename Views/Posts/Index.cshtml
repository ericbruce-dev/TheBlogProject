@using TheBlogProject.Services
@using TheBlogProject.Models


@inject IImageService imageService
@model IEnumerable<TheBlogProject.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="text-white text-decoration-none" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abstract)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-light">
            <td>
                <img class="img-fluid col-md-2" src="@imageService.DecodeImage(item.ImageData, item.ContentType)" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abstract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadyStatus)
            </td>
            <td>
            <td class="col-5">
                <a class="text-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="text-light" asp-action="Details" asp-route-slug="@item.Slug">Details</a> |
                <a class="text-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
